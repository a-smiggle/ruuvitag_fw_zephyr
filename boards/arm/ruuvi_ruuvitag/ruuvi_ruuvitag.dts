/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>

/ {
	model = "Ruuvi RuuviTag";
	compatible = "ruuvi,ruuvitag";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		sw0 = &button0;
		snp1 = &snp1;
		snp2 = &snp2;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 17 GPIO_ACTIVE_LOW>;
			label = "Red LED 0";
		};
		led1: led_1 {
			gpios = <&gpio0 19 GPIO_ACTIVE_LOW>;
			label = "Green LED 1";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
		};
	};

	sensor_power {
		compatible = "gpio-keys";
		snp1: sensor_power_1 {
			gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
			label = "Power 1";
		};
		snp2: sensor_power_2 {
			gpios = <&gpio0 07 GPIO_ACTIVE_HIGH>;
			label = "Power 2";
		};
	};

};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&spi0 {
	compatible = "nordic,nrf-spi";
	status = "okay";
	sck-pin = <29>;
	mosi-pin = <25>;
	miso-pin = <28>;
	cs-gpios = <&gpio0 3 GPIO_ACTIVE_LOW>, <&gpio0 8 GPIO_ACTIVE_LOW>;

	bme280@0 {
		compatible = "bosch,bme280";
		reg = <0>;
		spi-max-frequency = <10000000>;
		label= "BME280";
	};

	lis2dh12: lis2dh12@1 {
		compatible = "st,lis2dh", "st,lis2dh12";
		reg = <1>;
		spi-max-frequency = <10000000>;
		irq-gpios =  <&gpio0 2 GPIO_ACTIVE_HIGH>, <&gpio0 6 GPIO_ACTIVE_HIGH>;
		label = "LIS2DH12-ACCEL";
	};
};
&i2c1 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	sda-pin = <4>;
	scl-pin = <5>;

	ti_tmp117: ti_tmp117@48 {
		compatible = "ti,tmp117";
		reg = <0x48>;
		label = "TMP117";
		alert-gpios = <&gpio0 16 GPIO_ACTIVE_HIGH>;
	};

    sensirion_shtcx: shtcx@70 {
		compatible = "sensirion,shtcx";
		reg = <0x70>;
		label = "SHTCX";
                chip = "shtc3";
                measure-mode = "normal";
	};

    
};

&flash0 {

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x32000>;
		};
		slot1_partition: partition@3e000 {
			label = "image-1";
			reg = <0x0003E000 0x32000>;
		};
		scratch_partition: partition@70000 {
			label = "image-scratch";
			reg = <0x00070000 0xa000>;
		};

		/*
		 * The flash starting at 0x0007a000 and ending at
		 * 0x0007ffff (sectors 122-127) is reserved for use
		 * by the application.
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x0007a000 0x00006000>;
		};
	};
};
