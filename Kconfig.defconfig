if BOARD_NRF52_RUUVI

config BOARD
	default "nrf52_ruuvi"

if ADC

config ADC_0
	default y

endif # ADC

config I2C
	default y

if I2C

config I2C_0
	default y

if I2C_0

choice I2C_0_NRF_TYPE
	default I2C_0_NRF_TWIM

endchoice

endif # I2C_0

endif # I2C

if SPI

config SPI_0
	default y

endif # SPI

config BT_CTLR
	default BT

endif # BOARD_NRF52_RUUVI
